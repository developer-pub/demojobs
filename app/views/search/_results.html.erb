<div class="results">
	<h1>Dynamic Job Search Results</h1>
	<p>Below are your search results for jobs that include the keywords: "<%= @body %>".</p>
	<h2><%="Job Search Results [#{@start_index} to #{@end_index}] of [#{@offers_count}]"%></h2>

	<div class="list">
	    <%= form_tag '/', method: :get do %>
		<% @offers_limited.each do |f| %>
			<div class="element">
				<%= check_box_tag "prod_id[]", f.id %>
				<div class="title"><%= f.title %></div>
				<div class="body"><%= f.body %></div>
			</div>
		<% end %>
		<%= button_tag 'Look' %>
		<% end %>
	</div>

	<%= render 'paging' %>
</div>
