<div class="search-box">
	<div class="heading">Search for Jobs</div>
	<div class="body">
		<%= form_tag search_path, method: :get do %>
		<div class="label">Job Category</div>
		<%= text_field_tag :category, nil, class: 'field' %>

		<div class="label">Offer's content</div>
		<%= text_field_tag :body, nil, class: 'field' %>

		<%= button_tag 'Search', class: 'submit-button', name: nil %>
		<% end %>
	</div>
</div>
